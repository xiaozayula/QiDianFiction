<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoyu.mapper.ArticleMapperticle">
    <!--动态sql-->
    <select id="list" resultType="com.xiaoyu.pojo.Article">
        slect*from article
             <where>
                 <if test="category！=null">
                     category_id=#{categoryId}
                 </if>
                 <if test="state!=null">
                     and state =#{state}
                 </if>
                 and create_user=#{userId}
             </where>
    </select>
</mapper>